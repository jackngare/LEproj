@{
    ViewBag.Title = "Species";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Species</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Species")">Species</a>
            </li>
            <li class="active">
                <strong>Species</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInDownBig">
    <div class="row" data-ng-controller="speciesController">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <button ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary" type="submit">Add New</button>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form name="addUser" data-ng-show="addMode" class="cssSlideUp">
                        <div class="col-sm-6 col-sm-offset-0">
                            <div class="form-group"><label>Name*</label></div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span><input type="text" required="" data-ng-model="SpeciesName" class="form-control" focus-me="{{addMode}}">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group"><label>Description*</label> </div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-users"></i></span><input type="text" required="" data-ng-model="SpeciesDescription" class="form-control" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-0">
                                <br />
                                <button class="btn btn-primary" data-ng-click="save()" ng-disabled="addUser.$invalid" type="submit">Save changes</button>
                                <button class="btn btn-white" data-ng-click="toggleAdd()" type="button">Cancel</button>
                                <br />
                                <br />
                            </div>
                        </div>
                    </form>
                    <table id="usersTable" data-datatable="" data-dt-options="dtOptions" data-dt-columns="dtColumns" class="table table-striped table-bordered table-hover dataTables-example animated fadeInDown"></table>
                </div>
            </div>
        </div>
    </div>
</div>    