@{
    ViewBag.Title = "Dashboard";
}

<div class="wrapper wrapper-content animated fadeInUp" data-ng-controller="dashboardController as vm">
    <div class="row" >
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Species</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">6</h1>
                    <small>Total No. Species</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Animals</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">275</h1>
                    <small>No. of Animals sighted</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-primary pull-right">Weekly</span>
                    <h5>Observations</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">106,120</h1>
                    <div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>
                    <small>Total No. Observations</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <span class="label label-danger pull-right">Annual</span>
                    <h5>Observations</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">80,600</h1>
                    <div class="stat-percent font-bold text-danger">38% <i class="fa fa-level-down"></i></div>
                    <small>Total Annual No. Observations</small>
                </div>
            </div>
        </div>
    </div>
    <div class="ibox-content-chart">
        <ng-map zoom="4" center="-2.150359, 35.243393" style="width:100%; height:100%" map-type-id="ROADMAP">

        </ng-map>
    </div>
</div>
