@{
    ViewBag.Title = "Users";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Users</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "User")">Users</a>
            </li>
            <li class="active">
                <strong>User</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInDownBig">
    <div class="row" data-ng-controller="userController">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <button ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary" type="submit">Add New</button>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <form name="addUser" data-ng-show="addMode" class="users">
                        <div class="col-sm-6 col-sm-offset-0">
                            <div class="form-group"><label>Full Name*</label></div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span><input type="text" data-ng-model="UserFullNames" class="form-control" required="" focus-me="{{addMode}}">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group"><label>User Name*</label> </div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-users"></i></span><input type="text" data-ng-model="UserName" required="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6 col-sm-offset-0">
                            <br />
                            <div class="form-group" id="data_1"><label>Password*</label></div>
                            <div class="input-group date">
                                <span class="input-group-addon"><i class="fa fa-user-secret"></i></span><input type="password" data-ng-model="UserPassword" required="" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <br />
                            <div class="form-group" id="data_2"><label>Email Address*</label> </div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span><input type="text" data-ng-model="UserEmailAddress" required="" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <br />
                            <div class="form-group" id="data_2"><label>User Types*</label> </div>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-linux"></i></span><select class="form-control" required="" ng-model="UserTypeId" required="" ng-options="usertype.UserTypeId as usertype.Name for usertype in UserTypes"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-0">
                                <br />
                                <div class="form-group" id="data_2"><label></label> </div>
                                <button class="btn btn-primary" data-ng-click="save()" ng-disabled="addUser.$invalid" type="submit">Save changes</button>
                                <button class="btn btn-white" data-ng-click="toggleAdd()" type="button">Cancel</button>
                                <br />
                                <br />
                            </div>
                        </div>
                    </form>
                    <table id="usersTable" data-datatable="" data-dt-options="dtOptions" data-dt-columns="dtColumns" class="table table-striped table-bordered table-hover dataTables-example animated fadeInDown"></table>
                </div>
            </div>
        </div>
    </div>
</div>    