@{
    Layout = null;
}

<!DOCTYPE html>
<html data-ng-app="farmTraceModule">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" href="~/Content/images/Elephant_128px_557404_easyicon.net.ico">
    <title>Wildlife Tracking | @ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

    <!--Bootstrap to Google Maps API. Jack's Key -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD8fS3hJwOoP9lir5q-hGUanxUV0mKK0P0&libraries=places&sensor=false"></script>
    <!--<script type="text/javascript" src="//maps.googleapis.com/maps/api/js?></script>-->
    <script type="text/javascript" src="~/Scripts/map/ramaniStdLib.js"></script>
    <script type="text/javascript" src="~/Scripts/map/ramaniMapper.js"></script>
    <script type="text/javascript" src="~/Scripts/map/drawUSGNgraticule.js"></script>
    <script type="text/javascript" src="~/Scripts/map/usng2.js"></script>
    <script type="text/javascript" src="~/Scripts/map/markers.js"></script>
    <script type="text/javascript" src="~/Scripts/map/map.js"></script>
    <script type="text/javascript" src="~/Scripts/map/polygons.js"></script>
</head>
<body onload="initialize()">
    <div class="row border-bottom">
        <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
            @Html.Partial("_LoginPartial")
        </nav>
    </div>
   
        <div class="ibox-content">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group"><label>Species</label> </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-linux"></i></span><select class="form-control" ng-model="CropID" ng-options="crop.CropID as crop.CropName for crop in Crops"></select>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group" id="data_2"><label>Date</label> </div>
                    <div class="input-group date">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="date" data-ng-model="TargetDate" format-date class="form-control">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group"><label>Location</label></div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-map-marker"></i></span><input type="text" data-ng-model="SeasonName" class="form-control" focus-me="{{addMode}}">
                    </div>
                </div>
            </div>
        </div>
    

    <div id="mapArea" style="width:100%; height:82%;">
    </div>

    <!-- Footer -->
    @Html.Partial("_Footer")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/slimScroll")
    @Scripts.Render("~/bundles/inspinia")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/app")

</body>
</html>
